<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/landscapeKeyboardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandscapeKeyboardFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/leftParenthesisButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/leftParenthesis"
                android:textSize="20sp" />

            <Button
                android:id="@+id/rightParenthesisButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/rightParenthesis"
                android:textSize="20sp" />

            <Button
                android:id="@+id/secoNDButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/secoND"
                android:textSize="20sp" />

            <Button
                android:id="@+id/PiButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/pi"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/lnButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/ln"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/ACbutton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/ac_button"
                android:textColor="#B00020"
                android:text="@string/ac"
                android:textSize="20sp" />

            <Button
                android:id="@+id/changeSignButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/special_buttons"
                android:textColor="#d4ac0d"
                android:text="@string/change_sign"
                android:textSize="20sp" />

            <Button
                android:id="@+id/percentageButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/special_buttons"
                android:textColor="#d4ac0d"
                android:text="@string/percentage"
                android:textSize="20sp" />

            <Button
                android:id="@+id/divisionButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/special_buttons"
                android:textColor="#d4ac0d"
                android:text="@string/division"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/powerTwoButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/powerTwo"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/powerThreeButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/powerThree"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/xYButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/xy"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/tenXButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/tenX"
                android:textSize="20sp" />

            <Button
                android:id="@+id/eXButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:textStyle="bold"
                android:text="@string/ex"
                android:textSize="20sp" />

            <Button
                android:id="@+id/sevenButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/normal_buttons"
                android:text="@string/seven"
                android:textSize="20sp" />

            <Button
                android:id="@+id/eightButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/normal_buttons"
                android:text="@string/eight"
                android:textSize="20sp" />

            <Button
                android:id="@+id/nineButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/normal_buttons"
                android:text="@string/nine"
                android:textSize="20sp" />

            <Button
                android:id="@+id/multiplicationButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/special_buttons"
                android:textColor="#d4ac0d"
                android:textAllCaps="false"
                android:text="@string/multiplication"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/oneDivXButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/oneDivX"
                android:textSize="20sp" />

            <Button
                android:id="@+id/root2Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/root2"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/root3Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/root3"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/rootYButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/rootY"
                android:textAllCaps="false"
                android:textSize="20sp" />


            <Button
                android:id="@+id/logButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/log"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/fourButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/normal_buttons"
                android:text="@string/four"
                android:textSize="20sp" />

            <Button
                android:id="@+id/fiveButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/normal_buttons"
                android:text="@string/five"
                android:textSize="20sp" />

            <Button
                android:id="@+id/sixButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/normal_buttons"
                android:text="@string/six"
                android:textSize="20sp" />

            <Button
                android:id="@+id/minusButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/special_buttons"
                android:textColor="#d4ac0d"
                android:text="@string/minus"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/xExclamationButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/xExclamation"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/sinButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/sin"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/cosButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/cos"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/tanButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/tan"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/eButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:textStyle="bold"
                android:text="@string/e"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/oneButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/normal_buttons"
                android:text="@string/one"
                android:textSize="20sp" />

            <Button
                android:id="@+id/twoButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/normal_buttons"
                android:text="@string/two"
                android:textSize="20sp" />

            <Button
                android:id="@+id/threeButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/normal_buttons"
                android:text="@string/three"
                android:textSize="20sp" />

            <Button
                android:id="@+id/plusButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/special_buttons"
                android:textColor="#d4ac0d"
                android:text="@string/plus"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/calculatorButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/unique_button"
                android:text="@string/calculator"
                android:textSize="20sp" />

            <Button
                android:id="@+id/sinhButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/sinh"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/coshButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/cosh"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/tanhButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/tanh"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/DegButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/Deg"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/RandButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/normal_buttons"
                android:text="@string/Rand"
                android:textAllCaps="false"
                android:textSize="20sp" />

            <Button
                android:id="@+id/zeroButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/normal_buttons"
                android:text="@string/zero"
                android:textSize="20sp" />

            <Button
                android:id="@+id/pointButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/normal_buttons"
                android:text="@string/point"
                android:textSize="20sp" />

            <Button
                android:id="@+id/equalButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/equal_button"
                android:textColor="#28b463"
                android:text="@string/equal"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>