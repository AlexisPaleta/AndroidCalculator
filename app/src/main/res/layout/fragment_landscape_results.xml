<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/landscapeResultsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandscapeResultsFragment">

    <TextView
        android:id="@+id/landscapeResultsText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:includeFontPadding="false"
        android:paddingHorizontal="10sp"
        android:text="= 4"
        android:textAlignment="textEnd"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/previousLandscapeOperationText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:paddingHorizontal="10dp"
        android:text="2 + 2"
        android:textAlignment="textEnd"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/landscapeResultsText"
        app:layout_constraintEnd_toEndOf="@+id/landscapeResultsText"
        app:layout_constraintStart_toStartOf="@+id/landscapeResultsText" />


</androidx.constraintlayout.widget.ConstraintLayout>